@using Persons.Application.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Login_Layout.cshtml";
}

<div class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Tabs Titles -->
        <!-- Icon -->
        <div class="fadeIn first">
            <i class="fa fa-user-circle-o" aria-hidden="true"></i>
        </div>

        <!-- Login Form -->
        <form method="post" action="">
            <input asp-for="Username" id="Username" class="fadeIn second" placeholder="Login">
            <span asp-validation-for="Username" class="text-danger"></span>
            <input asp-for="Password" id="password" type="password" class="fadeIn third" placeholder="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="submit" class="fadeIn fourth" value="Log In">
        </form>

        <!-- Remind Passowrd -->
        <div id="formFooter">
            <a class="underlineHover" href="#">Forgot Password?</a>
        </div>

    </div>
</div>